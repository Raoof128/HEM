{
  "name": "HEM Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "pip install -e .[development]",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.black-formatter", "ms-python.vscode-pylance"]
    }
  }
}
